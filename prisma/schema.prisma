// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Product {
  id          Int      @id @default(autoincrement())
  shop        String
  prodId      String   @unique // gid://shopify/Product/123456
  title       String
  description String?  @db.Text
  tags        String[]
  collection  String[]
  options     Json
  price       Float
  stock       Int
  handle      String? // For creating links
  image       String?
  isSynced    Boolean  @default(false) // If false, needs re-sync with Pinecone
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  variants ProductVariant[]

  @@index([shop])
}

model ProductVariant {
  id     Int     @id @default(autoincrement())
  title  String
  sku    String
  image  String?
  option String
  stock  Int

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  @@index([productId])
}

model Customer {
  id        String   @id @default(uuid())
  shopifyId String?  @unique
  email     String   @unique
  firstName String?
  lastName  String?
  phone     String?
  source    String   @default("SHOPIFY") // e.g. "SHOPIFY", "MANUAL", "WEBSITE"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
  chats  ChatSession[]
}

model Order {
  id          String      @id @default(uuid())
  shopifyId   String      @unique // gid://shopify/Order/123
  orderNumber String
  status      String // e.g., "FULFILLED", "OPEN"
  totalPrice  Float
  createdAt   DateTime
  customerId  String
  customer    Customer    @relation(fields: [customerId], references: [id])
  items       OrderItem[]
}

model OrderItem {
  id          String  @id @default(uuid())
  productId   String
  productName String
  quantity    Int
  sku         String?
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
}

// For your Chatbot history
model ChatSession {
  id         String    @id @default(uuid())
  shop       String    // Store identifier
  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])
  isGuest    Boolean   @default(true)
  createdAt  DateTime  @default(now())

  messages Message[]

  @@index([shop])
  @@index([customerId])
}

model Message {
    id        String   @id @default(uuid())
    content   String
    role      String // "user", "assistant", or "system"
    createdAt DateTime @default(now())

    sessionId String
    session   ChatSession @relation(fields: [sessionId], references: [id])
}

// Chatbot Customization/Appearance Settings
model ChatbotCustomization {
    id        String   @id @default(uuid())
    shop      String   @unique // One customization per shop
    settings  Json     // Stores the complete MasterState as JSON
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([shop])
}

// AI Personality & Behavior Settings (Prompts for OpenAI)
model AISettings {
    id        String   @id @default(uuid())
    shop      String   @unique // One AI settings per shop
    settings  Json     // Stores the complete AISettingsState as JSON
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([shop])
}
